datasource db {
  provider = "mysql"
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

enum OtpType {
  email
  mobile
}

enum LessonType {
  video
  document
  quiz
}

enum QuestionType {
  MCQ
  FILLINTHEBLANK
  TRUEORFALSE
  SHORTANSWER
  DECRIPTIVE
}

model User {
  id             Int             @id @default(autoincrement())
  uuid           String          @unique @default(uuid())
  email          String          @unique
  name           String?
  username       String?         @unique
  dateOfBirth    DateTime?
  avatar         String?
  classGrade     String?
  mobile_prefix  String          @default("+91")
  mobile         String?
  about          String?         @db.Text
  password       String
  status         Boolean         @default(true)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  roles          Role[]          @relation("userroles")
  teacherCourses CourseTeacher[] @relation("TeacherCourses")
  quizAttempts   QuizAttempt[]   @relation("UserQuizAttempts")
  skills         UserSkill[]     @relation("UserSkill")
  projects       UserProject[]   @relation("userProjects")
  forums         CourForum[]     @relation("userForum")
  forumReactions ForumReaction[] @relation("UserForumReactions")

  @@map("users")
}

model Role {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  description String
  slug        String       @unique
  status      Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  permissions Permission[] @relation("rolepermissions")
  users       User[]       @relation("userroles")

  @@map("roles")
}

model Permission {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  slug        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  roles       Role[]   @relation("rolepermissions")

  @@map("permissions")
}

model UserOtp {
  id             Int      @id @default(autoincrement())
  type           OtpType  @default(mobile)
  email          String?  @unique
  mobilePrefix   String?
  mobile         String?  @unique
  code           String   @db.VarChar(20)
  resend         Int      @default(0)
  failedAttempts Int      @default(0)
  expiresAt      DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("user_otps")
}

model Course {
  id              Int             @id @default(autoincrement())
  title           String
  slug            String          @unique
  thumbnail       String
  grade           String
  duration        String
  price           Decimal         @db.Decimal(10, 2)
  discountedPrice Decimal         @db.Decimal(10, 2)
  description     String          @db.Text
  status          Boolean         @default(true)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  teachers        CourseTeacher[] @relation("CourseTeachers")
  subjects        CourseSubject[] @relation("CourseSubjects")
  forums          CourForum[]     @relation("courseForum")

  @@map("courses")
}

model CourseTeacher {
  id        Int      @id @default(autoincrement())
  courseId  Int
  teacherId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  course    Course   @relation("CourseTeachers", fields: [courseId], references: [id])
  teacher   User     @relation("TeacherCourses", fields: [teacherId], references: [id])

  @@map("course_teachers")
}

model Subject {
  id          Int              @id @default(autoincrement())
  name        String
  slug        String           @unique
  description String           @db.Text
  status      Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  courses     CourseSubject[]  @relation("SubjectCourses")
  chapters    SubjectChapter[] @relation("SubjectChapters")

  @@map("subjects")
}

model CourseSubject {
  id        Int      @id @default(autoincrement())
  courseId  Int
  subjectId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  course    Course   @relation("CourseSubjects", fields: [courseId], references: [id])
  subject   Subject  @relation("SubjectCourses", fields: [subjectId], references: [id])

  @@map("course_subjects")
}

model Chapter {
  id          Int               @id @default(autoincrement())
  title       String
  slug        String            @unique
  status      Boolean           @default(true)
  description String            @db.Text
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  subjects    SubjectChapter[]  @relation("SubjectChapters")
  lessons     LessonToChapter[] @relation("LessonToChapters")

  @@map("chapters")
}

model SubjectChapter {
  id        Int      @id @default(autoincrement())
  subjectId Int
  chapterId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  subject   Subject  @relation("SubjectChapters", fields: [subjectId], references: [id])
  chapter   Chapter  @relation("SubjectChapters", fields: [chapterId], references: [id])

  @@map("subject_chapters")
}

model Lesson {
  id          Int               @id @default(autoincrement())
  title       String
  slug        String            @unique
  description String            @db.Text
  status      Boolean           @default(true)
  topicName   String
  duration    String?
  videoUrl    String?
  NoOfPages   Int?
  type        LessonType        @default(video)
  docUrl      String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  chapters    LessonToChapter[] @relation("LessonToChapters")
  quizzes     LessonQuiz[]      @relation("LessonQuiz")

  @@map("lessons")
}

model LessonToChapter {
  id        Int      @id @default(autoincrement())
  lessonId  Int
  chapterId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lesson    Lesson   @relation("LessonToChapters", fields: [lessonId], references: [id])
  chapter   Chapter  @relation("LessonToChapters", fields: [chapterId], references: [id])

  @@map("lesson_to_chapter")
}

model quiz {
  id         Int           @id @default(autoincrement())
  title      String
  slug       String        @unique
  totalMarks Int           @default(0) // calculated as sum of marks of all questions
  passMarks  Int           @default(0) //auto calculated as 40% of total marks
  timeLimit  Decimal       @db.Decimal(10, 2) // in minutes
  questions  Question[]    @relation("quizQuestions")
  status     Boolean       @default(true)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  attempts   QuizAttempt[] @relation("QuizAttempts")
  lessons    LessonQuiz[]  @relation("QuizLesson")

  @@map("quizzes")
}

model LessonQuiz {
  id        Int      @id @default(autoincrement())
  lessonId  Int
  quizId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lesson    Lesson   @relation("LessonQuiz", fields: [lessonId], references: [id])
  quiz      quiz     @relation("QuizLesson", fields: [quizId], references: [id])
}

model QuizAttempt {
  id     Int @id @default(autoincrement())
  quizId Int
  userId Int

  obtainedMarks Decimal @db.Decimal(10, 2)
  totalMarks    Decimal @db.Decimal(10, 2)

  correctAnswers Int
  totalQuestions Int
  timeTaken      Int // in minutes
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  quiz    quiz              @relation("QuizAttempts", fields: [quizId], references: [id])
  user    User              @relation("UserQuizAttempts", fields: [userId], references: [id])
  answers QuestionAttempt[] @relation("attemptedQuestions")

  @@map("quiz_attempts")
}

model QuestionAttempt {
  id            Int @id @default(autoincrement())
  quizAttemptId Int
  questionId    Int

  obtainedMarks Decimal @db.Decimal(10, 2) // e.g. 1.0, 4.0
  totalMarks    Decimal @db.Decimal(10, 2) // e.g. 1.0, 5.0

  isCorrect Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  quizAttempt QuizAttempt @relation("attemptedQuestions", fields: [quizAttemptId], references: [id])
  question    Question    @relation("QuestionAttempts", fields: [questionId], references: [id])

  @@unique([quizAttemptId, questionId])
  @@map("question_attempts")
}

model Question {
  id        Int               @id @default(autoincrement())
  quizId    Int
  question  String            @db.Text
  status    Boolean           @default(true)
  marks     Int
  duration  Decimal           @default(0) @db.Decimal(10, 2) // in minutes
  type      QuestionType      @default(MCQ)
  answer    String?           @db.Text
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  quiz      quiz              @relation("quizQuestions", fields: [quizId], references: [id])
  options   QuestionOption[]  @relation("questionOptions")
  attempts  QuestionAttempt[] @relation("QuestionAttempts")

  @@map("questions")
}

model QuestionOption {
  id         Int      @id @default(autoincrement())
  questionId Int
  option     String   @db.Text
  status     Boolean  @default(true)
  isCorrect  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  question   Question @relation("questionOptions", fields: [questionId], references: [id])

  @@map("question_options")
}

model UserSkill {
  id        Int      @id @default(autoincrement())
  userId    Int
  skill     String
  level     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation("UserSkill", fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_skills")
}

model UserProject {
  id          Int       @id @default(autoincrement())
  userId      Int
  title       String
  description String    @db.Text
  status      Boolean   @default(true)
  imageUrl    String?
  date        DateTime?
  demoUrl     String?
  gitHubUrl   String?
  user        User      @relation("userProjects", fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("user_projects")
}

model CourForum {
  id        Int             @id @default(autoincrement())
  courseId  Int
  userId    Int
  title     String
  content   String          @db.Text
  fileUrl   String?
  parentId  Int?
  status    Boolean         @default(true)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  //add self relation for parent forum post
  parent    CourForum?      @relation("ForumReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   CourForum[]     @relation("ForumReplies")
  course    Course          @relation("courseForum", fields: [courseId], references: [id], onDelete: Cascade)
  user      User            @relation("userForum", fields: [userId], references: [id], onDelete: Cascade)
  reaction  ForumReaction[] @relation("ForumReactions")

  @@map("course_forum")
}

model ForumReaction {
  id        Int       @id @default(autoincrement())
  forumId   Int
  userId    Int
  emoji     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  forum     CourForum @relation("ForumReactions", fields: [forumId], references: [id], onDelete: Cascade)
  user      User      @relation("UserForumReactions", fields: [userId], references: [id], onDelete: Cascade)

  @@map("forum_reactions")
}
